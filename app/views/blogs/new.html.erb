<% provide(:title, "Start a Blog") %>

<div class="row align-center align-middle">
  <div class="small-12 medium-6 large-4 columns">
    <h3 class="text-center margin-bottom-20">Start a Blog</h3>
    <hr />
    <%= form_for(@blog) do |f| %>
      <%= error_messages_for @blog %>
      <%= render 'form', f: f %>
      <p>
        <%= f.button "Start Your Blog", class: "button success expanded", data: { disable_with: 'Saving...' } %>
      </p>
    <% end %>
  </div>
</div>
